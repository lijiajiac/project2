<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yida.project.mapper.VideoMapper">
    <resultMap id="my_map" type="com.yida.project.entity.Video">
        <id property="id" column="id"></id>
        <result property="title" column="title"></result>
        <result property="thumbnail" column="thumbnail"></result>
        <result property="modifyTime" column="modify_time"></result>
        <result property="spotImages" column="spotImages"></result>
        <association property="scenic" column="scennic_id"
                     select="com.yida.project.mapper.ScenicMapper.Read"></association>
    </resultMap>
    <insert id="addon">
        insert into s_video(
        title,scennic_id,thumbnail,modify_time,spotImages
        )
        values(
        #{title},#{scenic.id},#{thumbnail},#{modifyTime},#{spotImages}
        )
    </insert>
    <select id="selectall" resultMap="my_map">
        select * from s_video
    </select>
    <update id="updateon">
        update s_video
        <set>
            title = #{title},
            scennic_id = #{scenic.id},
            <if test="thumbnail !=null and thumbnail != ''">
                thumbnail = #{thumbnail},
            </if>
            modify_time = #{modifyTime},
            spotImages = #{spotImages}
        </set>
        <where>
            id = #{id}
        </where>
    </update>
    <select id="selecton" resultMap="my_map">
        select * from s_video
        <where>
            id=#{id}
        </where>
    </select>
    <!--模糊查询-->
    <select id="seleteall" resultMap="my_map">
        select * from s_video
        <where>
            <if test="title != null and title !='' ">
                and title like #{title}
            </if>
            <if test=" scenic_id != 0">
                and scennic_id= #{scenic_id}
            </if>
            <if test="begin !=null and begin!=''">
                and modify_time > #{begin}
            </if>
            <if test="end!=null and end!=''">
                and modify_time <![CDATA[<]]> #{end}
            </if>
        </where>
    </select>
</mapper>